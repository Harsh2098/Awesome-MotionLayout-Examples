<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/shopeeLogoImageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="Round"
                app:customFloatValue="30" />
        </Constraint>

        <Constraint
            android:id="@+id/sLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hLetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/hLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/sLetterTextView"
            app:layout_constraintStart_toEndOf="@id/oLetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/oLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/hLetterTextView"
            app:layout_constraintStart_toEndOf="@id/pLetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/pLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/oLetterTextView"
            app:layout_constraintStart_toEndOf="@id/e1LetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/e1LetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/pLetterTextView"
            app:layout_constraintStart_toEndOf="@id/e2LetterTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/e2LetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/e1LetterTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/shopeeLogoImageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/sLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hLetterTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/hLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/oLetterTextView"
            app:layout_constraintStart_toEndOf="@id/sLetterTextView" />

        <Constraint
            android:id="@+id/oLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pLetterTextView"
            app:layout_constraintStart_toEndOf="@id/hLetterTextView" />

        <Constraint
            android:id="@+id/pLetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/e1LetterTextView"
            app:layout_constraintStart_toEndOf="@id/oLetterTextView" />

        <Constraint
            android:id="@+id/e1LetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/e2LetterTextView"
            app:layout_constraintStart_toEndOf="@id/pLetterTextView" />

        <Constraint
            android:id="@+id/e2LetterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/e1LetterTextView" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="2500">

        <OnClick />

        <KeyFrameSet>

            <KeyPosition
                app:framePosition="25"
                app:keyPositionType="pathRelative"
                app:motionTarget="@string/letters"
                app:percentX="0.25"
                app:percentY="-0.1" />

            <!-- This key position is not really necessary -->
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="parentRelative"
                app:motionTarget="@string/letters"
                app:percentX="0.5"
                app:percentY="0.5" />

            <KeyPosition
                app:framePosition="75"
                app:keyPositionType="pathRelative"
                app:motionTarget="@string/letters"
                app:percentX="0.75"
                app:percentY="0.1" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="40"
                app:motionTarget="@string/letters" />

            <KeyAttribute
                android:alpha="0"
                app:framePosition="60"
                app:motionTarget="@string/letters" />

            <KeyAttribute
                android:alpha="1"
                android:elevation="8dp"
                app:framePosition="50"
                app:motionTarget="@id/shopeeLogoImageView" />

        </KeyFrameSet>
    </Transition>

</MotionScene>
